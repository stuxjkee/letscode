
<div class="form">
  <div class="container">
    <div class="row">
      <div class="col-lg-7">
    <h1> Create topic</h1>
    <%= form_for @topic do |f| %>
        <%= f.label :title %> </br>
        <%= f.text_field :title, class: "form-control" %> </br>
        <%= f.label :code %> </br>
        <%= f.text_area :code, class: "form-control" %> </br>
            <%= f.label :course_id %> </br>
            <%= f.text_field :course_id, class: "form-control" %> </br>
            <%= f.submit "Create", class: 'btn' %>
    <% end %>
      </div>
      <div class="col-lg-4 col-lg-offset-1">
       <%= link_to "Create task", controller: "tasks", action: "new" %>
      </div>
    </div>
  </div>

</div>
