
<div class="form">
  <div class="container">
    <div class="row">

      <div class="col-lg-7">
        <h1> Tasks </h1>
        <%= bootstrap_form_for @task, layuot: :horizontal do |f| %>
            <%= f.text_field :title%>
            <%= f.text_area :condition%>

            <%= f.select :topic_id, Topic.all.collect {|p| [p.title, p.id]}, {label: "Belongs to topic"} %>


            <%= f.submit "Create" %>
        <% end %>
      </div>

      <div class="col-lg-2">
        <%= link_to "Create test", controller: "tasks", action: "new_test"%>
      </div>


    </div>
  </div>

</div>
